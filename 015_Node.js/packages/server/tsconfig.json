{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                           
    "baseUrl": "src",                                
    "outDir": "./dist",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true 
  },
  "exclude": ["node_modules", "src/tests"],
  "include": ["src/**/*.ts"],
  "typeRoots": [
    "./@types",
    "./node_modules/@types",
  ]
}

